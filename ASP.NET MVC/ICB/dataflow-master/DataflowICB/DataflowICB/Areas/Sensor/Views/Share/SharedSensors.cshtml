@model IEnumerable<SensorViewModel>

@Styles.Render("~/bundles/tables-css")
<!-- Example DataTables Card-->
<div class="card mb-3">
    <div class="card-header">
        <i class="fa fa-table"></i> Data Table Example
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Owner</th>
                        <th>Measurement Type</th>
                        <th>Description</th>
                        <th>Online</th>
                        <th>Current Value</th>
                        <th>Functionality</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var sensor in @Model)
                    {
                        <tr>
                            <td>@sensor.Name</td>
                            <td>@sensor.CreatorUsername</td>
                            <td>@sensor.MeasurementType</td>
                            <td>@sensor.Description</td>
                            <td>@sensor.IsConnected</td>
                            <td>@sensor.CurrentValue</td>
                            <td>
                                @Html.ActionLink("[Details]", "ShowDetails", "Share",
                                        new { id = sensor.Id }, new { })
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>
    <div class="card-footer small text-muted">Updated yesterday at 11:59 PM</div>
</div>
<!-- /.container-fluid-->
<!-- /.content-wrapper-->

@section  scripts{
    @Scripts.Render("~/bundles/tables-js")

    <script>
        $('a').on('click', function () {
            let href = $(this).attr('href')
            let id = href.split('/').reverse()[0]
            $('.div-form').attr('hidden', 'hidden')
            let divId = '#' + id;
            $(divId).removeAttr('hidden')
        })
    </script>

}