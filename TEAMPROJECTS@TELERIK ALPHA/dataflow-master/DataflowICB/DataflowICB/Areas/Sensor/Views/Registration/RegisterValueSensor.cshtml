
@model SensorViewModel
@Styles.Render("~/bundles/wizard-css")

@using (Ajax.BeginForm("CreateSensor", "Registration",
                        new AjaxOptions
                        {
                            HttpMethod = "POST",
                            UpdateTargetId = "form-container",
                            InsertionMode = InsertionMode.Replace
                        },
                        new { @class = "main-login main-center" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(false)

    @Html.HiddenFor(m => m.LowestValue)
    @Html.HiddenFor(m => m.HighestValue)
    @Html.HiddenFor(m => m.MinPollingInterval)


    @Html.Partial("_CommonSensorForm", Model)

    @Html.LabelFor(m => m.MinValue, $"Minimum {Model.MeasurementType}", new { @class = "cols-sm-2 control-label" })
    @Html.EditorFor(m => m.MinValue, new { @class = "form-control" })
    <br />
    @Html.ValidationMessageFor(m => m.MinValue, "", new { @class = "text-danger" })

    <br />

    @Html.LabelFor(m => m.MaxValue, $"Maximum {Model.MeasurementType}")
    @Html.EditorFor(m => m.MaxValue, new { @class = "form-control" })
    <br />
    @Html.ValidationMessageFor(m => m.MaxValue, "", new { @class = "text-danger" })

    <input type="submit" value="Register" class="btn btn-primary btn-block reg-sensor-btn" />
}
